// Import all partials
@require './_*.styl'

header.store // entire store header
  //background pink
  text-align center
  
  img#yarn-logo
    max-width 200px
    height auto
    position relative
    

  h1 // store name
    //background purple
    font-size 14.4rem
    line-height 0.7 // this font has a wacky baseline
    display inline-block
    justify-content: center
    margin-bottom 20px
    &#yarn
      margin-right 20px
    &#shop
      margin-left -50px
    
  h3 // store tagline
    margin 0
    font-size 2rem
    color #e77fc0
    position relative
    display block
    margin-bottom 20px
    span // store tagline
      background white
      position relative
      z-index 2
      padding-left 1rem
      padding-right 1rem
    &:before, &:after // before and after the store tagline (decorative lines)
      display block
      z-index 1
      background black
      position absolute
      width 130%
      height 1px
      top 5px
      margin-left -15%
    &:after
      top auto
      bottom 7px


.catch-of-the-day // the entire store componenet // FLEX CONTAINER
  display flex // marks this element as the container
  justify-content center
  & > * // ALL FLEX CHILDREN
    padding 2rem // section padding
    border 2px solid black
    position relative
    background white
    transition all 0.3s
    overflow scroll
    &:first-child
      flex-basis 70%
      //background red
    &:nth-child(2)
      flex-basis 30%
      //background orange
    &:last-child
      overflow-y scroll
      right 0
      max-width 400px
      //background yellow

#admin-panel-container button#admin-panel-btn 
  background-color: #fff
  position: fixed
  top: 30%
  left: -20px
  width: 160px
  height: 40px
  transform: rotate(-90deg) translateY(0)
  transition: transform 400ms ease-in

#admin-panel-container button#admin-panel-btn.closed
  transform: rotate(-90deg) translateY(-100%)

#admin-panel-container button#admin-panel-btn.open
  transform: rotate(-90deg) translateY(-100%)

#admin-panel-container
  position fixed
  height 100%
  padding 0
  border none
  background transparent

#admin-panel-container.slideIn 
  transform: translateX(0)

#admin-panel-container.slideOut 
  transform: translateX(90%)

#admin-panel
  position relative
  padding 10px
  margin-left 30px
  transform: translateX(0)
  transition: transform 400ms ease-in

.inventory 
  position relative
  padding 10px
  min-height 700px
  background white
  border 2px solid black

ul
  list-style none
  margin 0
  padding 0

ul.order
  // Default state
  li
    border-bottom 1px solid black
    padding 2rem 0
    display flex
    font-size 1.6rem
    justify-content space-between
    align-items center
    button
      border 0
      display inline
      line-height 1
      right 0
      margin-left 15px
    &.unavailable
      text-decoration line-through
      background lighten(red, 80%)
    .price
      font-size 1.4rem
    span.count
      position relative
      overflow hidden
      float left // only works if it's floated?!
      margin-right 15px
      span
        display inline-block
        // transition all 0.5s
.total
  padding 2rem 0
  font-size 1.6rem
  border-bottom 3px solid black
  border-top 3px double black
  & strong
    float: right

.order-title
  text-align center

.item-edit
  margin-bottom 20px
  border 2px solid black
  overflow hidden
  display flex
  flex-wrap wrap
  input, textarea, select
    width 33.33%
    padding 10px
    line-height 1
    font-size 1.2rem
    border 0
    border-bottom 1px solid black
    border-right 1px solid black
    appearance none
    border-radius 0
    background white
    &:focus
      outline 0
      background lighten(orange, 85%)
  textarea
    width 100%
  input:last-of-type
    width 100%
  button
    width 100%
    border 0


// Menu Styles
.list-of-items
  border-top 2px solid black
  border-bottom 1px solid black
  padding-top 5px
  margin-top 2rem
  transform translateZ(0);

.store-item
  border-bottom 2px solid black
  border-top 1px solid black
  padding-bottom 10px
  padding-top 10px
  margin-bottom 5px
  clear both
  overflow hidden
  // background pink
  .item-header
      font-family 'bellota', sans-serif
      font-size 3.5rem
      color #e77fc0
      // background red
      padding 5px
      display: flex
    .item-name 
      margin 0
      flex-basis: 95%
      // background: lightgreen
    div.price
      font-size 2rem
      // background: lightyellow
      color black
      display: flex
      flex-direction: column      
      justify-content: center   

  .item-info 
    display: flex 
    .item-desc
      // background yellow
      flex-basis 80%
      display: flex
      flex-direction: column
      align-items: flex-start   
      justify-content: space-between  
      p
        margin 0
        font-size 1.8rem
        padding 10px
        // background lightblue
      button.add-to-order-btn
        margin 10px
        // background: lavender
        padding 5px
    .img-container
      flex-basis: 20%
      padding 10px
      // background: blue
      .item-photo
        height 100%
        width: 100%
        border 2px dashed black
  

#order-header-title, #inventory-header-title
  color #e77fc0

#remove-order-item-btn
  z-index: 0

div.logout-btn button
  margin-bottom 5px


button, input[type=submit]
  text-transform uppercase
  background none
  border 1px solid black
  font-weight 600
  font-size 1.5rem
  font-family 'Open Sans', sans-serif
  transition all 0.2s
  position relative
  z-index 2
  &[disabled]
    color #e77fc0
    background white
    border-color #e77fc0
    transform rotate(-25deg) scale(2) translateX(482%) translateY(550%)
    &:hover
      color #e77fc0
      cursor not-allowed
    &:after
      display none
  &:after
    content ''
    z-index -1
    display block
    background #e77fc0
    position absolute
    width 100%
    height 0
    left 0
    top 0
    transition all 0.2s
  &:hover, &:focus
    color white
    outline 0
    &:after
      height 100%
  // variants
  &.warning
    &:after
      background red
  &.success
    &:after
      background green

  &.github, &.facebook, &.twitter
    border 0
    display block
    margin-bottom 2rem
    width 100%
    color white
    padding 2rem

  &.github
    background #82D465
    &:after
      background darken(#82D465, 20%)

  &.facebook
    background #3864A3
    &:after
      background darken(#3864A3, 20%)

  &.twitter
    background #5EA9DD
    &:after
      background darken(#5EA9DD, 20%)

// Store Selector
.store-selector
  background white
  max-width 500px
  margin 50px auto
  padding 2rem
  border 2px solid black
  input, button
    width 100%
    &[type="text"]
      text-align center
      font-size 3rem
